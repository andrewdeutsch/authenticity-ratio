# Authenticity Ratio Tool - Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API (for LLM-powered scoring and summarization)
OPENAI_API_KEY=your-openai-api-key-here

# Reddit API credentials
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=python:purviewer:1.0_by_u/authenticatorer

# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_ASSOCIATE_TAG=your-amazon-associate-tag

# YouTube Data API v3
YOUTUBE_API_KEY=your-youtube-api-key

# Brave Search API
BRAVE_API_KEY=your-brave-api-key
BRAVE_API_AUTH=subscription-token
BRAVE_API_ENDPOINT=https://api.search.brave.com/res/v1/web/search
BRAVE_REQUEST_INTERVAL=1.0
BRAVE_ALLOW_HTML_FALLBACK=0

# Debug mode
DEBUG=False

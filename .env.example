# Authenticity Ratio Tool - Environment Configuration
# Copy this file to .env and fill in your API keys

# ====================================================================
# LLM Provider API Keys (for scoring, summarization, recommendations)
# ====================================================================

# OpenAI (required for default configuration)
# Models: gpt-3.5-turbo, gpt-4o-mini, gpt-4o
# Get key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude (optional)
# Models: claude-3-haiku-20240307, claude-3-5-sonnet-20241022
# Get key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini (optional)
# Models: gemini-1.5-flash, gemini-1.5-pro
# Get key: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# DeepSeek (optional)
# Models: deepseek-chat, deepseek-reasoner
# Get key: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# ====================================================================
# Data Source API Keys
# ====================================================================

# Reddit API credentials
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=python:purviewer:1.0_by_u/authenticatorer

# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_ASSOCIATE_TAG=your-amazon-associate-tag

# YouTube Data API v3
YOUTUBE_API_KEY=your-youtube-api-key

# Brave Search API
BRAVE_API_KEY=your-brave-api-key
BRAVE_API_AUTH=subscription-token
BRAVE_API_ENDPOINT=https://api.search.brave.com/res/v1/web/search
BRAVE_REQUEST_INTERVAL=1.0
BRAVE_ALLOW_HTML_FALLBACK=0

# Page Fetching Configuration (used by both Brave and Serper providers)
# Enable Playwright-based rendering for JavaScript-heavy sites and non-200 responses
# Requires: pip install playwright && playwright install
AR_USE_PLAYWRIGHT=0

# Serper API Key (Google Search)
SERPER_API_KEY=your-serper-api-key
SERPER_REQUEST_INTERVAL=1.0
SERPER_API_TIMEOUT=30
SERPER_MAX_PER_REQUEST=100

# Search Provider Selection (brave or serper)
# Default is serper - change to 'brave' if you prefer Brave Search
SEARCH_PROVIDER=serper

# Debug mode
DEBUG=False
